<div class="container-login">
    <h3>回答投稿</h3>
  <%= form_with model: [@question, @solution], local: true do |f| %>
    <div class="form-group">
      <%= f.label :【回答】%>
      <%= f.text_area :answer, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "送信", class: "btn btn-primary btn-block btn-lg", data: {confirm: "回答を投稿しますか？"} %>
    </div>
  <% end %>
</div>