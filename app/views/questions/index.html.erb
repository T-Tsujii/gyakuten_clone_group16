<div class="container-login">
    <h4>新規登録</h4>
    
    <% if @question.errors.any? %> 
        <% @question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    <% end %>
    
    <%= form_with model: @question, local: true do |f| %>
        <div class="form-group">
            <%= f.label :【質問】%>
            <%= f.text_area :title, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :【詳細】%>
            <%= f.text_area :detail, class: 'form-control' %>
        </div>
        
        <div class="form-group">
            <%= f.submit "送信", class: 'btn btn-primary btn-block', data: { confirm: '新規投稿しますか？' } %>
        </div>
    <% end %>

    <% @questions.each do |question| %>
        <%= link_to question_path(question) do %>
            <div class="question py-5 row">
                <div class="col-7"><%= question.title %></div>
                <div class="col-5 text-right"><%= l question.created_at, format: :gyakuten %></div>
            </div>
        <% end %>
    <% end %>

</div>