<div class=“container-fluid”>
  <div class=“row”>
    <div class="texts-contents">
      <% @writings.each.with_index(1) do |writing, i| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card border-dark mb-3">
            <div class="card-header p-0">
              <div class="embed-responsive embed-responsive-16by9">
                <iframe width="560" height="315" src="<%=writing.url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              </div>
            </div>
            <div class="card-body movie-text">
              <p><%= "#{writing.title}" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>