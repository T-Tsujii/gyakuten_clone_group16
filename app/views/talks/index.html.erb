<div class="container-fluid">
  <div class="row">
    <% @talks.each.with_index(1) do |talk, i| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card border-dark mb-3">
          <div class="card-header p-0">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe width="560" height="315" src="<%= talk.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
          </div>
          <div class="card-body movie-text">
            <p><%= talk.title %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="pagination justify-content-center"><%= paginate @talks %></div>
